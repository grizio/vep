    accept Show {
      id: nonEmptyString()
      title: nonEmptyString()
      author: nonEmptyString()
      director: nonEmptyString()
      content: nonEmptyString()
    }

    refuse Show {
      id: ""
      title: ""
      author: ""
      director: ""
      content: ""

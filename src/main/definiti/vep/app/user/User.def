package vep.app.user

import vep.app.common.verifications.IsNonBlank
import vep.app.common.verifications.Email
import vep.app.common.verifications.Password
import vep.app.common.verifications.NonEmptyList

type UserRegistration {
  email: Email
  password: Password
}

type Profile {
  email: Email
  firstName: String verifying IsNonBlank("Veuillez renseigner un prénom")
  lastName: String verifying IsNonBlank("Veuillez renseigner un nom")
  address: String verifying IsNonBlank("Veuillez renseigner une adresse")
  zipCode: String verifying IsNonBlank("Veuillez renseigner un code postal")
  city: String verifying IsNonBlank("Veuillez renseigner une ville")
  phones: NonEmptyList[Phone]
}

type Phone {
  name: String verifying IsNonBlank("Veuillez renseigner un nom de téléphone")
  number: String verifying IsNonBlank("Veuillez renseigner un numéro de téléphone")
}
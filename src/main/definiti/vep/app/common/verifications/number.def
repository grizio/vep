package vep.app.common.verifications

type PositiveNumber = Number verifying IsPositive
verification IsPositive {
  "Veuillez indiquer un nombre strictement positif"
  (number: Number) => {
    number > 0
  }
}

type PositiveOrNullNumber = Number verifying IsPositiveOrNull
verification IsPositiveOrNull {
  "Veuillez indiquer un nombre positif ou nul"
  (number: Number) => {
    number >= 0
  }
}